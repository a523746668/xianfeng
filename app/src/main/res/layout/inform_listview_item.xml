<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="24px"
        android:background="@color/backgroundColorShallow" />

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/infoer_item_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="51px"
            android:layout_marginLeft="68px"
            android:layout_marginRight="68px"
            android:layout_marginTop="51px"
            android:orientation="horizontal">

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="68px"
                android:layout_toLeftOf="@+id/infoer_item_affirm"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/infoer_item_tltle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="34px"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:text="和谐社会由你开始"
                    android:textColor="@color/textColorDark"
                    android:textSize="47px" />

                <TextView
                    android:id="@+id/infoer_item_news"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="发布者 时间"
                    android:textColor="@color/textColorMedium"
                    android:textSize="40px" />

            </com.zhy.autolayout.AutoLinearLayout>

            <ImageView
                android:id="@+id/infoer_item_affirm"
                android:layout_width="wrap_content"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/inform_listview_selector_style" />

        </com.zhy.autolayout.AutoRelativeLayout>

        <ImageView
            android:id="@+id/infoer_item_mark"
            android:layout_width="20px"
            android:layout_height="20px"
            android:layout_margin="51px"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            android:background="@mipmap/tabhost_hint" />

    </com.zhy.autolayout.AutoRelativeLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="10px"
        android:background="@color/backgroundColorShallow">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/comui_bar_bottom_shadow" />

    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoLinearLayout>
