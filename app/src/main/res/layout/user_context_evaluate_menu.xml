<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/x18">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/x15"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="@dimen/x120"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x20">

            <TextView
                android:id="@+id/evaluate_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="0"
                android:textColor="@color/red"
                android:textSize="@dimen/x14" />

            <ImageView
                android:id="@+id/evaluate_add"
                android:layout_width="@dimen/x30"
                android:layout_height="@dimen/x30"
                android:layout_alignParentRight="true"
                android:background="@mipmap/add_symbol" />

            <ImageView
                android:id="@+id/evaluate_minus"
                android:layout_width="@dimen/x30"
                android:layout_height="@dimen/x30"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@mipmap/minus_symbol" />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x20"
            android:text="最多可加减20分"
            android:textColor="@color/textColorShallow"
            android:textSize="@dimen/x14" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/x15"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="积分 "
            android:textColor="@color/red"
            android:textSize="@dimen/x14" />

        <Spinner
            android:id="@+id/evaluate_decade"
            android:layout_width="@dimen/x40"
            android:layout_height="@dimen/x25"
            android:layout_marginLeft="@dimen/x2"
            android:layout_marginRight="@dimen/x2"
            android:background="@color/backgroundColor"
            android:dropDownVerticalOffset="@dimen/x20"
            android:dropDownWidth="@dimen/x35"
            android:visibility="gone" />

        <Spinner
            android:id="@+id/evaluate_integer"
            android:layout_width="@dimen/x40"
            android:layout_height="@dimen/x25"
            android:layout_marginLeft="@dimen/x2"
            android:layout_marginRight="@dimen/x2"
            android:background="@color/backgroundColor"
            android:dropDownVerticalOffset="@dimen/x8"
            android:dropDownWidth="@dimen/x35"
            android:paddingLeft="@dimen/x12"
            android:spinnerMode="dropdown" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/x5"
            android:layout_weight="1"
            android:text="."
            android:textColor="@color/black"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/evaluate_decimals"
            android:layout_width="@dimen/x40"
            android:layout_height="@dimen/x25"
            android:layout_marginLeft="@dimen/x2"
            android:background="@color/backgroundColor"
            android:dropDownVerticalOffset="@dimen/x8"
            android:dropDownWidth="@dimen/x35"
            android:paddingLeft="@dimen/x12"
            android:spinnerMode="dropdown" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  分"
            android:textColor="@color/red"
            android:textSize="@dimen/x14" />

    </LinearLayout>

    <EditText
        android:id="@+id/evaluate_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/backgroundColorShallow"
        android:gravity="top"
        android:hint="依据内容多行输入......"
        android:inputType="textMultiLine"
        android:minLines="6"
        android:padding="@dimen/x15"
        android:textColor="@color/textColorDark"
        android:textColorHint="@color/textColorShallow" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x18"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/evaluate_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/x5"
            android:layout_weight="1"
            android:background="@mipmap/guan_cancel"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/textColorMedium"
            android:textSize="@dimen/x15" />

        <TextView
            android:id="@+id/evaluate_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x5"
            android:layout_weight="1"
            android:background="@mipmap/guan_submit"
            android:gravity="center"
            android:text="确认"
            android:textColor="@color/textColorWhite"
            android:textSize="@dimen/x15" />

        <!--<TextView-->
        <!--android:id="@+id/evaluate_appear"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_weight="1"-->
        <!--android:layout_marginLeft="@dimen/x10"-->
        <!--android:text="上报上级"-->
        <!--android:textColor="@color/textColorWhite"-->
        <!--android:textSize="@dimen/x15"-->
        <!--android:gravity="center"-->
        <!--android:background="@mipmap/guan_submit"-->
        <!--android:visibility="gone"/>-->

    </LinearLayout>

</LinearLayout>
