<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:paddingLeft="28px"
    android:paddingRight="28px"
    android:paddingTop="58px"
    >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="13212313214654364613213215646546432132132132132"
            android:textSize="47px"
            android:maxLines="2"
            android:id="@+id/tv_name"/>
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="23px"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发布单位："
                android:textSize="40px"
                android:textColor="@color/workparktext"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/workpark_fbdw"
                android:textSize="40px"
                android:textColor="@color/workparktext"
                android:text="湖南省商品质量监督"
                />
        </com.zhy.autolayout.AutoLinearLayout>
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="12px"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发布时间："
                android:textSize="40px"
                android:textColor="@color/workparktext"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/workpark_fbtime"
                android:textSize="40px"
                android:textColor="@color/workparktext"
                android:text="2018-3-26"
                />
        </com.zhy.autolayout.AutoLinearLayout>
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="12px"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="审核状态："
                android:textSize="40px"
                android:textColor="@color/workparktext"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/workpark_issh"
                android:textSize="40px"
                android:textColor="@color/allStyles"
                android:text="已审核"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:text="未推荐"
                android:textColor="@color/workparktext"
                android:textSize="40px"
                android:id="@+id/istj"
                />
            <Button
                android:layout_width="140px"
                android:layout_height="90px"
                android:text="删除"
                android:layout_marginLeft="20px"
                android:id="@+id/report_delete"
                android:textSize="40px"
                android:textColor="@color/allStyles"
                android:background="@drawable/corner_white_lightgray"
                />
        </com.zhy.autolayout.AutoLinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/content"
        android:layout_marginTop="28px"
        android:background="@color/viewfinder_mask"
        />

</com.zhy.autolayout.AutoLinearLayout>