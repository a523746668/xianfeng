<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <ImageView
            android:id="@+id/manage_list_user_image"
            android:layout_width="@dimen/x60"
            android:layout_height="@dimen/x60"
            android:layout_marginBottom="@dimen/x10"
            android:layout_marginLeft="@dimen/x15"
            android:layout_marginRight="@dimen/x15"
            android:layout_marginTop="@dimen/x10"
            android:background="@color/backgroundColor" />

        <LinearLayout
            android:id="@+id/manage_list_user_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/manage_list_user_image"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/x10"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/manage_list_user_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="用户名"
                    android:textColor="@color/textColorDark"
                    android:textSize="@dimen/x14" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/manage_list_user_log"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="共0篇"
                    android:layout_marginRight="@dimen/x15"
                    android:textColor="@color/textColorMedium"
                    android:textSize="@dimen/x12" />

                <TextView
                    android:id="@+id/manage_list_user_month_credits"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="积分 0"
                    android:layout_marginRight="@dimen/x15"
                    android:textColor="@color/textColorMedium"
                    android:textSize="@dimen/x12" />

                <TextView
                    android:id="@+id/manage_list_user_all_credits"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="月积分 0"
                    android:textColor="@color/textColorMedium"
                    android:textSize="@dimen/x12" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x15"
            android:background="@mipmap/keyijinru" />

    </RelativeLayout>

</RelativeLayout>
