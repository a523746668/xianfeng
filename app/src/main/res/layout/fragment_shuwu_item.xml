<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/rl_shujia_Image"
        android:layout_width="243px"
        android:layout_height="344px"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="30px"
        android:layout_marginRight="51px"
        android:layout_marginTop="40px"
        android:scaleType="centerCrop">

        <ImageView
            android:id="@+id/iv_shujia_Image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dp"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/tv_shuwu_isgk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_shujia_Image"
            android:layout_alignParentRight="true"
            android:background="@color/red"
            android:text=""
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/tv_shuwu_jurisdic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/shuwu_gongkai"/>

    </com.zhy.autolayout.AutoRelativeLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="51px"
        android:layout_marginRight="17px"
        android:layout_marginTop="40px"
        android:layout_toLeftOf="@+id/rl_shujia_Image"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_shujia_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="27px"
            android:text="22222222"
            android:textColor="@color/textColorDark"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_shujia_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="27px"
            android:text="阅读量:"
            android:textColor="@color/textColorShallow"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_shujia_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="27px"
            android:text="上传者:"
            android:textColor="@color/textColorShallow"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_shujia_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="3dp"
            android:ellipsize="end"
            android:maxLines="3"
            android:text="222222222222222222222222222222222222222222222222222222222222222"
            android:textColor="@color/textColorMedium"
            android:textSize="14sp" />

    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoRelativeLayout>