<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_rizhi_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2023.12.45"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_tizhi_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:lines="1"
            android:text="今天天气好"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <com.qingyii.hxtz.customview.MyGridView
            android:id="@+id/gv_rizhi_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:cacheColorHint="#00000000"
            android:listSelector="@drawable/white"
            android:numColumns="3"></com.qingyii.hxtz.customview.MyGridView>
    </LinearLayout>

</LinearLayout>