<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:textSize="52px"
        android:gravity="center"
        android:textColor="#505050"
        android:id="@+id/resultsonname"
        android:layout_marginTop="22px"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="35px"
        android:textColor="@color/colorPrimary"
        android:text="截至上次审核2018年5月20日"
         android:layout_gravity="center"
        android:layout_marginTop="36px"
        />
    
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="300px"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginTop="43px"
        android:layout_marginLeft="57px"
        android:layout_marginRight="57px"
        android:background="@mipmap/back99"
        >
       <com.zhy.autolayout.AutoLinearLayout
           android:layout_width="wrap_content"
           android:layout_height="300px"
           android:orientation="vertical"
           android:layout_weight="1"
          >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="64px"
        android:layout_marginRight="64px"
        android:layout_marginTop="52px"
        android:text="当前得分/总分"
        android:textSize="46px"
        android:textColor="#898989"
        android:layout_gravity="center_horizontal"
        />
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="23px"
            >
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="68px"
               android:textColor="#dd3030"
               android:text="70"
               android:id="@+id/getscore"
               />
            <TextView
                android:textSize="40px"
                android:textColor="#505050"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/score"
                android:text="/100"
                />
        </com.zhy.autolayout.AutoLinearLayout>
       </com.zhy.autolayout.AutoLinearLayout>
      <TextView
          android:layout_width="2px"
          android:layout_height="match_parent"
           android:layout_marginBottom="40px"
          android:layout_marginTop="40px"
          android:background="@color/red"
          ></TextView>
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="wrap_content"
            android:layout_height="300px"
            android:orientation="vertical"
            android:layout_weight="1"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="64px"
                android:layout_marginRight="64px"
                android:layout_marginTop="52px"
                android:text="排名/单位数"
                android:textSize="46px"
                android:textColor="#898989"
                android:layout_gravity="center_horizontal"
                />
            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:layout_marginTop="23px"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="68px"
                    android:textColor="#dd3030"
                    android:text="70"
                    android:id="@+id/getadnwei"
                    />
                <TextView
                    android:textSize="40px"
                    android:textColor="#505050"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/danwei"
                    android:text="/100"
                    />
            </com.zhy.autolayout.AutoLinearLayout>
        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoLinearLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50px"
        android:id="@+id/resultsonrecyc"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        ></android.support.v7.widget.RecyclerView>

</com.zhy.autolayout.AutoLinearLayout>