<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/x15"
    android:paddingLeft="@dimen/x12"
    android:paddingRight="@dimen/x12"
    android:paddingTop="@dimen/x18">

    <RelativeLayout
        android:layout_width="@dimen/x75"
        android:layout_height="@dimen/x95">

        <ImageView
            android:id="@+id/report_list_item_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/guan_li_null_image"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/report_list_item_guan_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/report_list_item_guan_add"
            android:visibility="gone"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x95"
        android:layout_marginLeft="@dimen/x10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x10"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/report_list_item_class"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="类型："
                android:textColor="@color/textColorMedium"
                android:textSize="@dimen/x11" />

            <TextView
                android:id="@+id/report_list_item_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="时间："
                android:textColor="@color/textColorMedium"
                android:textSize="@dimen/x11" />

        </LinearLayout>

        <TextView
            android:id="@+id/report_list_item_context"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x25"
            android:ellipsize="end"
            android:maxLines="2"
            android:text=""
            android:textColor="@color/textColorDark"
            android:textSize="@dimen/x14" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <TextView
                android:id="@+id/report_list_item_integral"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="积分 + 0"
                android:textSize="@dimen/x15" />

            <LinearLayout
                android:layout_width="@dimen/x140"
                android:layout_height="@dimen/x22"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true">

                <TextView
                    android:id="@+id/report_list_item_state"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/x20"
                    android:layout_marginRight="@dimen/x20"
                    android:layout_weight="1"
                    android:background="@mipmap/confirmed_affirm"
                    android:gravity="center"
                    android:text="状态"
                    android:textColor="@color/tltleColor"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/report_list_item_affirm"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/x5"
                    android:layout_weight="1"
                    android:background="@drawable/confirmed_affirm_selector_style"
                    android:gravity="center"
                    android:text="确认"
                    android:textColor="@color/tltleColor"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/report_list_item_appeal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/x5"
                    android:layout_weight="1"
                    android:background="@mipmap/confirmed_appeal"
                    android:gravity="center"
                    android:text="申诉"
                    android:visibility="gone" />

            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>
