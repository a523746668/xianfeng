<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/main_circle_nav"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/toolbarbackground">

            <ImageView
                android:id="@+id/circle_create_left"
                android:layout_width="69px"
                android:layout_height="58px"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="@mipmap/back_white" />

            <TextView
                android:id="@+id/circle_create_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="发布"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/circle_create_right"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:text="发布"
                android:textColor="#FFFFFF" />
        </com.zhy.autolayout.AutoRelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <EditText
                android:id="@+id/circle_create_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/x12"
                android:background="@drawable/edit_corners_gray"
                android:gravity="start"
                android:hint="这一刻的想法..."
                android:minHeight="@dimen/x120"
                android:padding="@dimen/x8"
                android:textColor="@color/textColorDark"
                android:textColorHint="@color/textColorShallow" />

            <TextView
                android:id="@+id/circle_create_textnum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingRight="@dimen/x15"
                android:text="0/1000"
                android:textColor="@color/textColorShallow"
                android:textSize="@dimen/x13" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/circle_create_grid"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="@dimen/x15"
                android:layout_marginRight="@dimen/x15"
                android:layout_marginBottom="@dimen/x15"
                android:layout_below="@+id/circle_create_textnum" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="@dimen/x20"
            android:background="@color/textColorShallow" />

        <RelativeLayout
            android:id="@+id/circle_create_rl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/x16"
                android:text="选择类型"
                android:textColor="#000000"
                android:textSize="@dimen/x13" />

            <TextView
                android:id="@+id/circle_create_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/x12"
                android:textColor="@color/textColorMedium"
                android:layout_marginRight="@dimen/x35"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/x15"
                android:background="@mipmap/keyijinru"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/textColorShallow" />

    </com.zhy.autolayout.AutoLinearLayout>

</ScrollView>