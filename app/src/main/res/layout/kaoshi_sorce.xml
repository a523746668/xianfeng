<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/popupwindow_corners"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/pop_count"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="你这次考试成绩为：0分"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/lightgray" />

        <TextView
            android:id="@+id/pop_countmsg"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="5dip"
            android:text="恭喜您闯关成功！请选择是否继续闯关？"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/lightgray" />

        <TextView
            android:id="@+id/pop_time"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="5dip"
            android:text="总共花了0分钟"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/lightgray" />

        <TextView
            android:id="@+id/pop_right"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="5dip"
            android:text="答对0道题"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/lightgray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/pop_error"
                android:layout_width="0dp"
                android:layout_height="50dip"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:gravity="center"
                android:padding="5dip"
                android:text="答错0道题"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <Button
                android:id="@+id/check_error"
                android:layout_width="0dp"
                android:layout_height="50dip"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@color/red"
                android:gravity="center"
                android:padding="5dip"
                android:text=""
                android:textColor="@color/white"
                android:textSize="16sp"
                android:visibility="gone" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/lightgray" />

        <Button
            android:id="@+id/pop_ok"
            android:layout_width="80dip"
            android:layout_height="40dip"
            android:layout_gravity="center"
            android:layout_marginBottom="30dip"
            android:layout_marginTop="20dip"
            android:background="@color/red"
            android:gravity="center"
            android:padding="5dip"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <LinearLayout
            android:id="@+id/pop_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/pop_next"
                android:layout_width="0dp"
                android:layout_height="40dip"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:layout_weight="1"
                android:background="@color/red"
                android:gravity="center"
                android:padding="5dip"
                android:text="继续闯关"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <Button
                android:id="@+id/pop_again"
                android:layout_width="0dp"
                android:layout_height="40dip"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:layout_weight="1"
                android:background="@color/red"
                android:gravity="center"
                android:padding="5dip"
                android:text="稍后在试"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>