<?xml version="1.0" encoding="utf-8"?>
<com.qingyii.hxtz.base.widget.AutoCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginTop="14px"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.zhy.autolayout.AutoLinearLayout
                android:paddingBottom="44px"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/notify_item_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="46px"
                    android:layout_marginRight="74px"
                    android:layout_marginTop="44px"
                    android:ellipsize="end"
                    android:text="和谐社会由你开始"
                    android:textColor="@color/notifyListTitleColor"
                    android:textSize="46px" />

                <com.zhy.autolayout.AutoLinearLayout
                    android:id="@+id/notify_item_unit_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="46px"
                    android:layout_marginTop="35px">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="发布单位："
                        android:textColor="@color/notifyListContentColor"
                        android:textSize="42px" />

                    <TextView
                        android:id="@+id/notify_item_unit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="党建工作部"
                        android:textColor="@color/notifyListContentColor"
                        android:textSize="42px" />
                </com.zhy.autolayout.AutoLinearLayout>

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="46px"
                    android:layout_marginTop="26px">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="发布时间："
                        android:textColor="@color/notifyListContentColor"
                        android:textSize="42px" />

                    <TextView
                        android:id="@+id/notify_item_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="2017年06月12日　12:00"
                        android:textColor="@color/notifyListContentColor"
                        android:textSize="42px" />
                </com.zhy.autolayout.AutoLinearLayout>

                <com.zhy.autolayout.AutoLinearLayout
                    android:id="@+id/notify_item_status_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="46px"
                    android:layout_marginTop="41px">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="时限："
                        android:textColor="@color/notifyListContentColor"
                        android:textSize="44px" />

                    <TextView
                        android:id="@+id/notify_item_emergency"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="普通"
                        android:textColor="@color/notifyListContentColor"
                        android:textSize="44px" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="类型："
                        android:textColor="@color/notifyListContentColor"
                        android:textSize="44px" />

                    <TextView
                        android:id="@+id/notify_item_type"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="查阅通知"
                        android:textColor="@color/notifyListContentColor"
                        android:textSize="44px" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="状态："
                        android:textColor="@color/notifyListContentColor"
                        android:textSize="44px" />

                    <TextView
                        android:id="@+id/notify_item_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="56px"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="未查阅"
                        android:textColor="@color/notifyListUnreadColor"
                        android:textSize="44px" />
                </com.zhy.autolayout.AutoLinearLayout>

            </com.zhy.autolayout.AutoLinearLayout>
        </com.zhy.autolayout.AutoRelativeLayout>

        <ImageView
            android:id="@+id/notify_item_mark"
            android:layout_width="30px"
            android:layout_height="30px"
            android:layout_alignParentRight="true"
            android:layout_marginRight="36px"
            android:layout_marginTop="28px"
            android:background="@mipmap/tabhost_hint"
            android:visibility="gone"
            app:layout_auto_basewidth="height" />
    </com.zhy.autolayout.AutoRelativeLayout>
</com.qingyii.hxtz.base.widget.AutoCardView>
