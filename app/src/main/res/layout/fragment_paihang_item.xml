<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_paihang_Image"
        android:layout_width="@dimen/x72"
        android:layout_height="@dimen/x102"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="@dimen/x9"
        android:layout_marginRight="@dimen/x15"
        android:layout_marginTop="@dimen/x12">

        <ImageView
            android:id="@+id/iv_paihang_Image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/tv_paihang_isgk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_paihang_Image"
            android:layout_alignParentRight="true"
            android:background="@color/green"
            android:text="" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x15"
        android:layout_marginRight="@dimen/x5"
        android:layout_marginTop="@dimen/x12"
        android:layout_toLeftOf="@+id/rl_paihang_Image"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_paihang_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="@dimen/x8"
            android:text="书架"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_paihang_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="@dimen/x8"
            android:ellipsize="end"
            android:maxLines="3"
            android:text="这本榨汁很好看这本榨汁很好看这本榨汁很好看这本榨汁很好看这本榨汁很好看这本榨汁很好看这本榨汁很好看这本榨汁很好看这本榨汁很好看这本榨汁很好看这本榨汁很好看这本榨汁很好看这本榨汁很好看这本榨汁很好看"
            android:textColor="@color/one_black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_paihang_read"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="阅读：24424"
            android:textColor="@color/one_black"
            android:textSize="12sp" />
    </LinearLayout>


</RelativeLayout>
