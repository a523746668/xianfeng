<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="34px">

    <com.qingyii.hxt.view.RoundedImageView
        android:id="@+id/iv_shujixq_pl_imageUrl"
        android:layout_width="108px"
        android:layout_height="108px"
        android:scaleType="center"
        app:corner_radius="100dp" />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40px"
        android:layout_toRightOf="@id/iv_shujixq_pl_imageUrl"
        android:orientation="vertical">

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_shujixq_pl_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="大师"
                android:textColor="@color/black_wenzhang"
                android:textSize="47px"
                android:textStyle="bold" />

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_shujixq_pl_pinglun"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="17px"
                    android:background="@mipmap/neikaninfo_liuyan"
                    android:visibility="gone" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="67px"
                    android:text="0"
                    android:textSize="37px"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/iv_shujixqblack_pl_dianzanimage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="17px"
                    android:background="@mipmap/neikaninfo_dianzan"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/iv_shujixqliang_pl_dianzanimage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="67px"
                    android:text="0"
                    android:textSize="37px" />

                <TextView
                    android:id="@+id/tv_shujixq_pl_dianzanshu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10px"
                    android:text=""
                    android:textSize="37px" />

            </com.zhy.autolayout.AutoLinearLayout>

        </com.zhy.autolayout.AutoRelativeLayout>

        <TextView
            android:id="@+id/tv_shujixq_pl_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20px"
            android:text=""
            android:textColor="@color/one_black"
            android:textSize="34px" />

        <TextView
            android:id="@+id/tv_shujixq_pl_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/black"
            android:textSize="37px" />

        <com.qingyii.hxt.customview.MyListView
            android:id="@+id/list_shujixq_pl_mlistview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="51px"
            android:layout_marginRight="40px"
            android:layout_marginTop="13px" />

    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoRelativeLayout>