<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/kaoshicontent_rl"
        android:layout_width="fill_parent"
        android:layout_height="150px"
        android:background="@color/red"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_back_kaoshicontent"
            android:layout_width="39px"
            android:layout_height="68px"
            android:src="@mipmap/fanhui"
            android:scaleType="fitXY"
          android:layout_centerVertical="true"
            android:layout_marginLeft="25px"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/title_kaoshicontent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="网络百事通八级考试"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/iv_rank_kaoshicontent"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:scaleType="centerInside"
            android:src="@mipmap/look_jifen"
            android:visibility="gone"/>

    </com.zhy.autolayout.AutoRelativeLayout>
    <!-- <com.ab.view.sliding.AbSlidingTabView
        android:id="@+id/abstv_kaoshicontent"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" /> -->
    <!--  <FrameLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:id="@+id/fm_kaoshicontent">
     </FrameLayout> -->

    <com.zhf.android_viewflow.ViewFlow
        android:id="@+id/kaoshi_viewflow"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="9" />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@color/one_black"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/question_page"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="上一题"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:background="@drawable/dress1" />

        <TextView
            android:id="@+id/question_time"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text=""
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/question_over"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="下一题"
            android:textColor="@color/white"
            android:textSize="20sp"
              android:background="@drawable/dress1" />
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoLinearLayout>
