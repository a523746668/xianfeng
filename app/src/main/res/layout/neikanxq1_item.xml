<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_neikanxq1_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x15"
        android:layout_marginRight="@dimen/x15"
        android:layout_marginTop="@dimen/x12"
        android:layout_marginBottom="@dimen/x12"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:text="标题"
        android:textColor="@color/textColorDark"
        android:textSize="17sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/tv_neikanxq1_Image"
            android:layout_width="@dimen/x70"
            android:layout_height="@dimen/x70"
            android:layout_margin="@dimen/x10"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x15"
                android:layout_marginRight="@dimen/x15"
                android:orientation="horizontal">

                <!--<ImageView-->
                <!--android:id="@+id/neikanxq1_image_iv"-->
                <!--android:layout_width="60dp"-->
                <!--android:layout_height="60dp"-->
                <!--android:layout_margin="5dip"-->
                <!--android:scaleType="centerCrop"-->
                <!--android:visibility="gone" />-->

                <TextView
                    android:id="@+id/tv_neikanxq1_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/x15"
                    android:layout_marginTop="@dimen/x8"
                    android:ellipsize="end"
                    android:maxLines="3"
                    android:text="类型：PDF"
                    android:textColor="@color/textColorMedium"
                    android:textSize="14sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_neikanxq1_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/x15"
                    android:layout_marginTop="@dimen/x8"
                    android:layout_marginLeft="@dimen/x15"
                    android:ellipsize="end"
                    android:maxLines="3"
                    android:text="大小："
                    android:textColor="@color/textColorMedium"
                    android:textSize="14sp"
                    android:visibility="gone" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_neikanxq1_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x15"
                android:layout_marginBottom="@dimen/x10"
                android:ellipsize="end"
                android:maxLines="3"
                android:textColor="@color/textColorMedium"
                android:textSize="14sp" />

            <!--<TextView-->
            <!--android:id="@+id/tv_neikan_date"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginBottom="@dimen/x12"-->
            <!--android:layout_marginLeft="@dimen/x15"-->
            <!--android:text="上传者：wewe"-->
            <!--android:textColor="@color/textColorShallow"-->
            <!--android:textSize="@dimen/x11" />-->

        </LinearLayout>

    </LinearLayout>

</LinearLayout>