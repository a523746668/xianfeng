<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/circle_report_nav"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignParentTop="true"
            android:background="@color/tltleColor">

            <ImageView
                android:id="@+id/circle_report_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:background="@mipmap/back_white" />

            <TextView
                android:id="@+id/circle_report_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="编辑举报内容"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/circle_report_right"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:text="举报"
                android:textColor="#FFFFFF" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <EditText
                android:id="@+id/circle_report_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/x12"
                android:background="@drawable/edit_corners_gray"
                android:gravity="start"
                android:hint="填写举报原因..."
                android:minHeight="@dimen/x120"
                android:padding="@dimen/x8"
                android:textColor="@color/textColorDark"
                android:textColorHint="@color/textColorShallow" />

            <TextView
                android:id="@+id/circle_report_textnum"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right"
                android:paddingRight="@dimen/x15"
                android:text="0/1000"
                android:textColor="@color/textColorShallow"
                android:textSize="@dimen/x13" />

            <!--<android.support.v7.widget.RecyclerView-->
            <!--android:id="@+id/circle_report_grid"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="100dp"-->
            <!--android:layout_below="@+id/circle_report_edit"-->
            <!--app:layout_marginTopPercent="5%h" />-->

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="@dimen/x20"
            android:background="@color/textColorShallow" />

        <!--<TextView-->
        <!--android:id="@+id/circle_report_type"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_below="@+id/circle_report_textnum"-->
        <!--android:background="#F5F5F5"-->
        <!--android:drawablePadding="10dp"-->
        <!--android:drawableRight="@mipmap/arrow_right_n"-->
        <!--android:gravity="left"-->
        <!--android:padding="10dp"-->
        <!--android:text="选择类型"-->
        <!--android:textColor="#000000" />-->

        <RelativeLayout
            android:id="@+id/circle_report_rl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <TextView
                android:id="@+id/circle_report_anony"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/x16"
                android:text="匿名举报"
                android:textColor="#000000"
                android:textSize="@dimen/x13" />

            <ImageView
                android:id="@+id/circle_report_confirm"
                android:layout_width="@dimen/x15"
                android:layout_height="@dimen/x10"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/x15"
                android:background="@mipmap/green_draw"
                android:visibility="gone" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/textColorShallow" />

    </LinearLayout>

</ScrollView>