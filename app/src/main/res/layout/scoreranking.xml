<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools">

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="150px"
        android:background="@color/red"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/scoreranking_goback_iv"
            android:layout_width="39px"
            android:layout_height="68px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
           android:src="@mipmap/fanhui" />

        <TextView
            android:id="@+id/scoreranking_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="考试成绩排行榜"
            android:textColor="@color/white"
            android:textSize="52px"
            android:layout_centerInParent="true"
            />

    </com.zhy.autolayout.AutoRelativeLayout>

    <TextView
        android:id="@+id/scoreranking_kaoshiming"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_gravity="center"
        android:background="@color/white"
        android:gravity="center"
        android:padding="5dip"
        android:text=""
        android:textColor="@color/black"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/textColorMedium" />

    <android.support.design.widget.TabLayout
        android:id="@+id/sliding_tabs"
        app:tabMaxWidth="0dp"
        app:tabGravity="fill"
        app:tabMode="fixed"
        app:tabTextColor="@color/white"
        app:tabSelectedTextColor="@color/red"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.v4.view.ViewPager
        android:id="@+id/ranking_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white" />

</com.zhy.autolayout.AutoLinearLayout>
