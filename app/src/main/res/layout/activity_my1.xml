<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColorShallow"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x45"
        android:background="@color/tltleColor">

        <LinearLayout
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:src="@mipmap/returns_arrow" />

            <TextView
                android:id="@+id/tv_show"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/x20"
                android:gravity="center_vertical"
                android:text="个人信息"
                android:textColor="@color/white"
                android:textSize="20sp" />

        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_touxiang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/x1"
                android:layout_marginTop="@dimen/x10"
                android:background="@color/white">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="@dimen/x5"
                    android:layout_marginRight="@dimen/x15"
                    android:layout_marginTop="@dimen/x5">

                    <ImageView
                        android:layout_width="@dimen/x67"
                        android:layout_height="@dimen/x67"
                        android:layout_centerInParent="true"
                        android:background="@mipmap/headportrait" />

                    <com.qingyii.hxtz.view.RoundedImageView
                        android:id="@+id/iv_touxiang"
                        android:layout_width="@dimen/x50"
                        android:layout_height="@dimen/x50"
                        android:layout_centerInParent="true"
                        android:scaleType="center"
                        app:corner_radius="100dp" />

                </RelativeLayout>

                <!--<com.qingyii.hxt.view.RoundedImageView-->
                <!--android:id="@+id/iv_touxiang"-->
                <!--android:layout_width="@dimen/x55"-->
                <!--android:layout_height="@dimen/x55"-->
                <!--android:layout_alignParentRight="true"-->
                <!--android:layout_centerVertical="true"-->
                <!--android:layout_marginBottom="@dimen/x5"-->
                <!--android:layout_marginRight="@dimen/x15"-->
                <!--android:layout_marginTop="@dimen/x5"-->
                <!--android:src="@mipmap/headportrait"-->
                <!--app:corner_radius="100dp" />-->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/x15"
                    android:text="头像"
                    android:textColor="@color/textColorMedium"
                    android:textSize="@dimen/x15" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_rizhi"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/x1"
                android:background="@color/white">

                <TextView
                    android:id="@+id/tv_my_nicheng"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/x15"
                    android:text=""
                    android:textColor="@color/one_black"
                    android:textSize="@dimen/x15" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/x15"
                    android:text="用户名"
                    android:textColor="@color/textColorMedium"
                    android:textSize="@dimen/x15" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_rizhi2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/x1"
                android:background="@color/white">

                <TextView
                    android:id="@+id/tv_my_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/x15"
                    android:enabled="false"
                    android:text=""
                    android:textColor="@color/one_black"
                    android:textSize="@dimen/x15" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/x15"
                    android:text="手机号"
                    android:textColor="@color/textColorMedium"
                    android:textSize="@dimen/x15" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_rizhi3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/x1"
                android:background="@color/white">

                <TextView
                    android:id="@+id/tv_my_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20sp"
                    android:layout_marginRight="15dp"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/one_black"
                    android:textSize="@dimen/x15" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/x15"
                    android:text="真实姓名"
                    android:textColor="@color/textColorMedium"
                    android:textSize="@dimen/x15" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_chushengdate"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/x1"
                android:background="@color/white">

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/x15"
                    android:text="出生日期"
                    android:textColor="@color/textColorMedium"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_my_birthday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/x15"
                    android:text="请选择出生日期"
                    android:textColor="@color/one_black"
                    android:textSize="@dimen/x15" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/xuznzexingbie"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/x10"
                android:background="@color/white">

                <TextView
                    android:id="@+id/tv_my_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/x15"
                    android:text="请选择性别"
                    android:textColor="@color/one_black"
                    android:textSize="@dimen/x15" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/x15"
                    android:text="请选择性别"
                    android:textColor="@color/textColorMedium"
                    android:textSize="@dimen/x15" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_danwei"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/x1"
                android:background="@color/white">

                <TextView
                    android:id="@+id/tv_my_danwei"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/x15"
                    android:enabled="false"
                    android:text=""
                    android:textColor="@color/one_black"
                    android:textSize="@dimen/x15" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/x15"
                    android:text="单位"
                    android:textColor="@color/textColorMedium"
                    android:textSize="@dimen/x15" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_bumen"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/x1"
                android:background="@color/white">

                <TextView
                    android:id="@+id/tv_my_bumen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/x15"
                    android:text=""
                    android:textColor="@color/one_black"
                    android:textSize="@dimen/x15" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/x15"
                    android:text="部门"
                    android:textColor="@color/textColorMedium"
                    android:textSize="@dimen/x15" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_zhiwu"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <TextView
                    android:id="@+id/tv_my_zhiwu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/x15"
                    android:text=""
                    android:textColor="@color/one_black"
                    android:textSize="@dimen/x15" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/x15"
                    android:text="职务"
                    android:textColor="@color/textColorMedium"
                    android:textSize="@dimen/x15" />
            </RelativeLayout>

            <!--   <View
                  android:layout_width="fill_parent"
                  android:layout_height="1dp"
                  android:background="@color/lightgray" /> -->
        </LinearLayout>

    </ScrollView>

</LinearLayout>