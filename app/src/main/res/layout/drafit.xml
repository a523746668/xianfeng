<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">
   <com.zhy.autolayout.AutoRelativeLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content">
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="正在下载中，请稍等"
          android:textColor="@color/black"
          android:textSize="50px"
          android:layout_margin="20px"
          android:id="@+id/tishi"
          android:visibility="gone"/>
   <EditText
       android:layout_width="match_parent"
       android:layout_height="150px"
       android:layout_margin="50px"
       android:hint="请输入草稿名字"
      android:id="@+id/draftname"

       />

      <ProgressBar
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          style="?android:attr/progressBarStyleHorizontal"
          android:layout_marginTop="100px"
          android:max="100"
         android:id="@+id/updateprogress"
          android:layout_marginLeft="20px"
          android:layout_marginRight="20px"

           />
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/baifenbi"
          android:layout_below="@+id/updateprogress"
          android:layout_alignParentRight="true"
          android:textColor="@color/black"
          android:textSize="60px"
          android:layout_marginRight="20px"
          android:layout_marginTop="20px"
          android:visibility="gone"
          />

     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="    检查到有新版本，是否进行更新?"
         android:id="@+id/text99"
         android:textSize="50px"
         android:textColor="@color/black"
         android:padding="20px"
         android:layout_marginTop="15px"
         android:visibility="gone"
         />



   </com.zhy.autolayout.AutoRelativeLayout>
    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >
       <Button
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
          android:text="确认"
           android:layout_marginLeft="50px"
           android:background="@null"
          android:id="@+id/draftqueren"
           android:textColor="@color/black"
           />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消"
             android:layout_alignParentRight="true"
            android:background="@null"
            android:id="@+id/draftquxiao"
           android:layout_marginRight="50px"
            android:textColor="@color/black"
            />


    </com.zhy.autolayout.AutoRelativeLayout>

</com.zhy.autolayout.AutoLinearLayout>