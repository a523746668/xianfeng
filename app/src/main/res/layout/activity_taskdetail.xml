<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zhf.TaskdetailActivity"
    android:background="@color/white">

    <include layout="@layout/include_toolbar"
        android:id="@+id/include"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:layout_below="@+id/include"

        android:text="2017年省直工委建设考核指标2"
        android:textSize="40px"
        android:textColor="#dd3030"
        android:gravity="center"
        android:id="@+id/taskindextitle"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="2px"
         android:layout_below="@+id/taskindextitle"
        android:background="@color/tasklisttextview"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:layout_below="@+id/taskindextitle"
        android:visibility="gone"
        android:text="工作责任制，加强意识形态(10分)"
        android:textSize="52px"
        android:textColor="#505050"
        android:gravity="center"
        android:id="@+id/taskindexname"
        />
      <com.zhy.autolayout.AutoRelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@+id/taskindexname"
          android:id="@+id/taskrl2"

          >



          <com.zhy.autolayout.AutoLinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/taskdetailll1"
              android:orientation="vertical"
              android:background="@color/tasklisttextview"
              android:layout_below="@+id/taskindexname"
              android:layout_alignParentLeft="true"
              android:layout_alignParentStart="true"

              >


              <com.zhy.autolayout.AutoRelativeLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:id="@+id/taskdetailal1"
                  android:visibility="gone"

                  >

                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="加强理论突出武装建设"
                      android:textSize="32px"
                      android:textColor="#898989"
                      android:layout_marginLeft="110px"
                      android:layout_marginTop="30px"
                      android:id="@+id/taskonetitle"
                      android:layout_marginBottom="30px"
                      android:gravity="center"


                      />
                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="一级(25分)"
                      android:textSize="32px"
                      android:textColor="#dd3030"
                      android:layout_centerVertical="true"
                      android:layout_alignParentRight="true"
                      android:layout_marginRight="40px"
                      android:id="@+id/taskonescore"

                      />
                  <TextView
                      android:layout_width="50px"
                      android:layout_height="2px"
                      android:background="@color/black"
                      android:layout_centerVertical="true"
                      android:layout_marginLeft="40px"


                      />


              </com.zhy.autolayout.AutoRelativeLayout>
              <com.zhy.autolayout.AutoRelativeLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:id="@+id/taskdetailal2"
                  android:visibility="gone"

                  >
                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="工作责任制,加强意识形态"
                      android:textSize="32px"
                      android:textColor="#898989"
                      android:layout_marginLeft="160px"


                      android:id="@+id/tasktwotitle"
                      />
                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="二级(20分)"
                      android:textSize="32px"
                      android:textColor="#dd3030"
                      android:layout_alignParentRight="true"
                      android:layout_marginRight="40px"
                      android:id="@+id/tasktwoscore"
                      android:gravity="center"
                      android:layout_centerVertical="true"

                      />
                  <TextView
                      android:layout_width="100px"
                      android:layout_height="2px"
                      android:background="@color/black"
                      android:layout_centerVertical="true"
                      android:layout_marginLeft="40px"
                    >

                  </TextView>

              </com.zhy.autolayout.AutoRelativeLayout>
              <com.zhy.autolayout.AutoRelativeLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:id="@+id/taskdetailal3"
                  android:visibility="gone"
                  >
                  <TextView
                      android:layout_width="488px"
                      android:layout_height="wrap_content"
                      android:text="在落实意识形态工作责任制，加强意识形态方面有实际措施"
                      android:textSize="32px"
                      android:textColor="#898989"
                      android:layout_marginLeft="210px"
                       android:layout_marginTop="30px"
                      android:id="@+id/taskthreetitle"
                      android:layout_marginBottom="30px"
                      />
                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="二级(20分)"
                      android:textSize="32px"
                      android:textColor="#dd3030"
                      android:layout_centerVertical="true"
                      android:layout_alignParentRight="true"
                      android:layout_marginRight="40px"
                      android:id="@+id/taskthreescore"
                      />
                  <TextView
                      android:layout_width="150px"
                      android:layout_height="2px"
                      android:background="@color/black"
                      android:layout_centerVertical="true"
                      android:layout_marginLeft="40px"></TextView>
              </com.zhy.autolayout.AutoRelativeLayout>
              <com.zhy.autolayout.AutoRelativeLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:id="@+id/taskdetailal4"
                  android:visibility="gone"
                  >
                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="工作责任制,加强意识形态"
                      android:textSize="32px"
                      android:textColor="#898989"
                      android:layout_marginLeft="260px"

                      android:id="@+id/taskfourtitle"
                      />
                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="4级(20分)"
                      android:textSize="32px"
                      android:textColor="#dd3030"
                      android:layout_alignParentRight="true"
                      android:layout_marginRight="40px"
                      android:id="@+id/taskfourscore"
                      android:gravity="center"
                      android:layout_centerVertical="true"
                      />
                  <TextView
                      android:layout_width="200px"
                      android:layout_height="2px"
                      android:background="@color/black"
                      android:layout_centerVertical="true"
                      android:layout_marginLeft="40px"

                      >

                  </TextView>

              </com.zhy.autolayout.AutoRelativeLayout>



          </com.zhy.autolayout.AutoLinearLayout>
          <TextView
              android:layout_width="2px"
              android:layout_height="match_parent"
              android:layout_alignBottom="@+id/taskdetailll1"
              android:layout_marginLeft="40px"
              android:background="@color/black"
              />


      </com.zhy.autolayout.AutoRelativeLayout>



    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/taskdetailrecyc"
        android:layout_below="@+id/taskrl2"
        android:layout_marginTop="50px"
        android:layout_marginLeft="40px"
        android:layout_marginRight="40px"
        ></android.support.v7.widget.RecyclerView>

</com.zhy.autolayout.AutoRelativeLayout>
