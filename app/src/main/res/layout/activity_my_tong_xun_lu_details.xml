                    <ImageView
                        android:id="@+id/txl_details_emblem"
                        android:layout_width="@dimen/x25"
                        android:layout_height="@dimen/x25"
                        android:layout_alignParentRight="true"
                        android:background="@mipmap/the_emblem"
                        android:visibility="gone" />

                </RelativeLayout>

                <TextView
