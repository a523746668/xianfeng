                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x5"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="00000000000"
                    android:textColor="@color/textColorMedium"
                    android:textSize="@dimen/x20"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/x115">

                    <TextView
                        android:id="@+id/txl_details_unit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/x10"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="部门："
                        android:textColor="@color/textColorMedium"
                        android:textSize="@dimen/x14" />

                    <TextView
                        android:id="@+id/txl_details_duty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/x12"
                        android:layout_marginTop="@dimen/x10"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="职务："
                        android:textColor="@color/textColorMedium"
                        android:textSize="@dimen/x14" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/x12"
                        android:layout_marginTop="@dimen/x10"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="星级："
                            android:textColor="@color/textColorMedium"
                            android:textSize="@dimen/x14" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/unit_level_star1_no"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="无星"
                                android:textColor="@color/textColorDark"
                                android:textSize="@dimen/x13"
                                android:visibility="gone" />

                            <ImageView
                                android:id="@+id/unit_level_star1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/star"
                                android:visibility="gone" />

                            <ImageView
                                android:id="@+id/unit_level_star2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/star"
                                android:visibility="gone" />

                            <ImageView
                                android:id="@+id/unit_level_star3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/star"
                                android:visibility="gone" />

                            <ImageView
                                android:id="@+id/unit_level_star4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/star"
                                android:visibility="gone" />

                            <ImageView
                                android:id="@+id/unit_level_star5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/star"
                                android:visibility="gone" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

