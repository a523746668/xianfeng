<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/backgroundColorTranslucence"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/train_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/backgroundColor"
        android:gravity="center"
        android:padding="@dimen/x5"
        android:text=""
        android:textColor="@color/textColorMedium"
        android:textSize="@dimen/x11" />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="28px">

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="27px">

            <TextView
                android:id="@+id/train_tltle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="标题"
                android:textColor="@color/textColorDark"
                android:textSize="58px" />

            <ImageView
                android:id="@+id/train_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/x5"
                android:background="@mipmap/train_state_ing" />

        </com.zhy.autolayout.AutoRelativeLayout>

        <TextView
            android:id="@+id/train_sponsor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/x8"
            android:text="主办:"
            android:textColor="@color/textColorShallow"
            android:textSize="52px" />

        <TextView
            android:id="@+id/train_context"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/x10"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="内容"
            android:textColor="@color/textColorMedium"
            android:textSize="52px" />

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x3"
                    android:layout_marginRight="@dimen/x5"
                    android:background="@mipmap/train_time"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:id="@+id/train_time_valid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="发布时间截至时间"
                    android:textColor="@color/textColorShallow"
                    android:textSize="52px" />

            </com.zhy.autolayout.AutoLinearLayout>

            <ImageView
                android:id="@+id/train_item_mark"
                android:layout_width="@dimen/x6"
                android:layout_height="@dimen/x6"
                android:layout_marginRight="@dimen/x10"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@mipmap/tabhost_hint" />

        </com.zhy.autolayout.AutoRelativeLayout>

    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoLinearLayout>
