<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whitesmoke"
    android:orientation="vertical"
    tools:context=".LoginActivity">

    <include layout="@layout/activity_tltle" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/one_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="2dip"
                android:text="1 输入手机号"
                android:textColor="@color/red"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="10dip"
                android:layout_height="10dip"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dip"
                android:scaleType="centerInside"
                android:src="@mipmap/user_guide" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/two_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="2dip"
                android:text="2 输入验证码"
                android:textColor="@color/one_black"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="10dip"
                android:layout_height="10dip"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dip"
                android:scaleType="centerInside"
                android:src="@mipmap/user_guide" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/three_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="2dip"
                android:text="3 设置密码"
                android:textColor="@color/one_black"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/one_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x45"
            android:layout_marginTop="@dimen/x10"
            android:background="@color/white">

            <EditText
                android:id="@+id/reg_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/x30"
                android:background="#FFFFFF"
                android:hint="输入手机号"
                android:inputType="phone"
                android:maxLength="11"
                android:textColor="@color/textColorMedium" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_confirm_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x45"
            android:layout_marginTop="@dimen/x10"
            android:background="@color/white"
            android:visibility="invisible">

            <EditText
                android:id="@+id/confirm_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/x30"
                android:background="#FFFFFF"
                android:hint="确认密码"
                android:inputType="textPassword"
                android:textColor="@color/textColorMedium" />

        </LinearLayout>

        <Button
            android:id="@+id/regiest_go"
            android:layout_width="fill_parent"
            android:layout_height="45dip"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="@dimen/x10"
            android:background="@color/allStyles"
            android:text="获取验证码"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <LinearLayout
            android:id="@+id/login_auto_go_ll"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:layout_marginLeft="5dip"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/login_auto_go"
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/x25"
                android:background="@drawable/checkbox_selector"
                android:button="@null"
                android:checked="true"
                android:textColor="@color/blue"
                android:visibility="visible" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="2dip"
                android:text="我已阅读并接受先锋云平台用户协议"
                android:textColor="@color/textColorMedium"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>