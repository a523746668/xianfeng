<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/x18">

    <EditText
        android:id="@+id/inform_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/backgroundColorShallow"
        android:gravity="top"
        android:hint="请假内容多行输入......"
        android:inputType="textMultiLine"
        android:minLines="6"
        android:padding="@dimen/x15"
        android:textColor="@color/textColorDark"
        android:textColorHint="@color/textColorShallow" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x10"
        android:orientation="horizontal">

        <Button
            android:id="@+id/inform_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="签收"
            android:textSize="@dimen/x14"
            android:background="@mipmap/inform_frame_button" />

        <Button
            android:id="@+id/inform_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/white"
            android:text="请假"
            android:textSize="@dimen/x14"
            android:background="@mipmap/inform_green_button" />

    </RelativeLayout>

</LinearLayout>
