<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x10" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/x15">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="积分： "
                    android:textColor="@color/textColorDark"
                    android:textSize="@dimen/x15" />

                <TextView
                    android:id="@+id/report_context_item_grade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/textColorDark"
                    android:textSize="@dimen/x15" />

            </LinearLayout>

            <TextView
                android:id="@+id/report_context_item_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="状态"
                android:layout_alignParentRight="true"
                android:textColor="@color/green_09bb07"
                android:textSize="@dimen/x15" />

        </RelativeLayout>

        <TextView
            android:id="@+id/report_context_item_context"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x3"
            android:text="依据： "
            android:textColor="@color/textColorDark"
            android:textSize="@dimen/x15" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/report_context_item_appeals_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/x15"
        android:layout_marginTop="@dimen/x8"
        android:background="@color/white"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/x50"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="申诉内容： "
                android:textColor="@color/textColorDark"
                android:textSize="@dimen/x15" />

            <TextView
                android:id="@+id/report_context_item_appeals"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/textColorDark"
                android:textSize="@dimen/x15" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="申诉"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/x14" />

    </RelativeLayout>

    <TextView
        android:id="@+id/report_context_item_superior"
        android:layout_marginTop="@dimen/x8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/x15"
        android:text="报上级审核"
        android:background="@color/white"
        android:textColor="@color/textColorDark"
        android:textSize="@dimen/x15"
        android:visibility="gone"/>

</LinearLayout>
