<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="220px">

        <!-- TODO: Update blank fragment layout -->
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="675px"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="54px"
            android:orientation="vertical">

            <TextView
                android:id="@+id/file_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="61px"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="文件名"
                android:textColor="@color/textColorDark"
                android:textSize="51px" />

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/file_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="51px"
                    android:text="创建时间"
                    android:textColor="@color/textColorMedium"
                    android:textSize="40px" />

                <TextView
                    android:id="@+id/file_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="文件大小"
                    android:textColor="@color/textColorMedium"
                    android:textSize="40px" />

            </com.zhy.autolayout.AutoLinearLayout>

        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/file_download_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:clickable="true"
                android:textColor="@color/white"
                android:paddingTop="10px"
                android:paddingBottom="10px"
                android:paddingLeft="50px"
                android:paddingRight="50px"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:layout_marginRight="54px"
                android:background="@drawable/shape_download_bt_bg" />

            <View
                android:layout_width="match_parent"
                android:layout_height="3px"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="51px"
                android:layout_marginRight="51px"
                android:background="@color/backgroundColor" />

        </com.zhy.autolayout.AutoRelativeLayout>

    </com.zhy.autolayout.AutoRelativeLayout>

</com.zhy.autolayout.AutoRelativeLayout>
