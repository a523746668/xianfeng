<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/home_toolbar"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/notifyTitleColor"
        android:orientation="horizontal">

        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/home_right_layout"
            android:layout_width="@dimen/title_height"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="32px">

            <Button
                android:id="@+id/home_right_button"
                android:layout_width="50px"
                android:layout_height="60px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/system_notice_selector"
                android:clickable="false" />

            <TextView
                android:id="@+id/home_system_notice_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/home_right_button"
                android:layout_marginRight="12px"
                android:layout_toLeftOf="@id/home_right_button"
                android:textColor="@color/white"
                android:textSize="28px"
                android:visibility="gone" />
        </com.zhy.autolayout.AutoRelativeLayout>

        <TextView
            android:id="@+id/home_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="52px" />


    </com.zhy.autolayout.AutoRelativeLayout>

    <com.jess.arms.widget.autolayout.AutoScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/home_toolbar"
        android:scrollbars="vertical">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.bigkoo.convenientbanner.ConvenientBanner
                android:id="@+id/home_ad_convenientbanner"
                android:layout_width="match_parent"
                android:layout_height="420px"
                app:canLoop="true" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="202px">

                <ImageView
                    android:id="@+id/home_new"
                    android:layout_width="206px"
                    android:layout_height="89px"
                    android:layout_marginLeft="22px"
                    android:layout_marginRight="35px"
                    android:layout_marginTop="60px"
                    android:src="@drawable/recent_news" />

                <ViewFlipper
                    android:id="@+id/home_viewFilter"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="17px"
                    android:layout_marginRight="22px"
                    android:layout_marginTop="17px" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="30px"
                android:background="#f0f0f0" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:descendantFocusability="blocksDescendants"
                android:layout_marginBottom="88px">
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/home_recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:overScrollMode="never"
                    android:scrollbars="none"
                    tools:listitem="@layout/home_recyclerview_item" />
            </RelativeLayout>
        </com.zhy.autolayout.AutoLinearLayout>
    </com.jess.arms.widget.autolayout.AutoScrollView>

    <RelativeLayout
        android:id="@+id/home_banner_rl"
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:background="#d84f2e"
        android:visibility="visible">

        <TextView
            android:id="@+id/home_tv_banner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:textColor="#dddddd"
            android:textSize="44px" />

        <Button
            android:id="@+id/home_banner_close"
            android:layout_width="60px"
            android:layout_height="60px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="40px"
            android:background="@mipmap/banner_close" />

    </RelativeLayout>

</com.zhy.autolayout.AutoRelativeLayout>