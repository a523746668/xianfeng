<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_alter_pwd"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    android:orientation="vertical"
    tools:context="com.qingyii.hxt.AlterPwdActivity">

    <include layout="@layout/activity_tltle" />

    <EditText
        android:id="@+id/alter_pwd_old"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x45"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="@dimen/x15"
        android:background="#FFFFFF"
        android:hint="输入旧密码"
        android:inputType="textPassword"
        android:maxLength="11"
        android:paddingLeft="@dimen/x25"
        android:textColor="@color/textColorMedium" />

    <EditText
        android:id="@+id/alter_pwd_new"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x45"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="@dimen/x10"
        android:background="#FFFFFF"
        android:hint="输入新密码"
        android:inputType="textPassword"
        android:maxLength="11"
        android:paddingLeft="@dimen/x25"
        android:textColor="@color/textColorMedium" />

    <EditText
        android:id="@+id/alter_pwd_again"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x45"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="@dimen/x10"
        android:background="#FFFFFF"
        android:hint="再次输入新密码"
        android:inputType="textPassword"
        android:maxLength="11"
        android:paddingLeft="@dimen/x25"
        android:textColor="@color/textColorMedium" />

    <Button
        android:id="@+id/alter_pwd_confirm"
        android:layout_width="fill_parent"
        android:layout_height="45dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="@dimen/x45"
        android:background="@color/allStyles"
        android:text="确认修改"
        android:textColor="@color/white"
        android:textSize="18sp" />

</LinearLayout>
