<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/x18"
    android:background="@color/white"
    android:orientation="vertical">

    <EditText
        android:id="@+id/menu_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/backgroundColorShallow"
        android:padding="@dimen/x15"
        android:gravity="top"
        android:inputType="textMultiLine"
        android:minLines="6"
        android:hint="申诉内容多行输入......"
        android:textColorHint="@color/textColorShallow"
        android:textColor="@color/textColorDark"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x10"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/guan_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消"
            android:textColor="@color/textColorMedium"
            android:textSize="@dimen/x15"
            android:gravity="center"
            android:background="@mipmap/guan_cancel"/>

        <TextView
            android:id="@+id/guan_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="提交"
            android:textColor="@color/textColorWhite"
            android:textSize="@dimen/x15"
            android:gravity="center"
            android:background="@mipmap/guan_submit"/>

    </RelativeLayout>

</LinearLayout>
