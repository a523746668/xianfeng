<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include
        android:id="@+id/activity_tltle"
        layout="@layout/activity_tltle" />

    <com.jess.arms.widget.autolayout.AutoScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:id="@+id/kaoshi_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="34px"
                android:layout_marginLeft="40px"
                android:layout_marginTop="67px"
                android:text=""
                android:textColor="@color/textColorDark"
                android:textSize="54px" />

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="11px"
                android:layout_marginLeft="40px"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="主办单位 :"
                    android:textColor="@color/textColorMedium"
                    android:textSize="40px" />

                <TextView
                    android:id="@+id/kaoshi_zhubandanwei"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text=""
                    android:textColor="@color/textColorMedium"
                    android:textSize="40px" />

            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="11px"
                android:layout_marginLeft="40px"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="考试时间 :"
                    android:textColor="@color/textColorMedium"
                    android:textSize="40px" />

                <TextView
                    android:id="@+id/kaoshi_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text=""
                    android:textColor="@color/textColorMedium"
                    android:textSize="40px" />
            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="11px"
                android:layout_marginLeft="40px"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="考试类型 :"
                    android:textColor="@color/textColorMedium"
                    android:textSize="40px" />

                <TextView
                    android:id="@+id/kaoshi_leixing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/textColorMedium"
                    android:textSize="40px" />

            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="11px"
                android:layout_marginLeft="40px"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/kaoshi_gongyougs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="共有关数 :"
                    android:textColor="@color/textColorMedium"
                    android:textSize="40px" />

                <TextView
                    android:id="@+id/kaoshi_guangshu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text=""
                    android:textColor="@color/textColorMedium"
                    android:textSize="40px" />

            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="11px"
                android:layout_marginLeft="40px"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/dancixianshi_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="单次限时 :"
                    android:textColor="@color/textColorMedium"
                    android:textSize="40px" />

                <TextView
                    android:id="@+id/kaoshi_danci"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text=""
                    android:textColor="@color/textColorMedium"
                    android:textSize="40px" />
            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="11px"
                android:layout_marginLeft="40px"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="答题机会 :"
                    android:textColor="@color/textColorMedium"
                    android:textSize="40px" />

                <TextView
                    android:id="@+id/kaoshi_dati"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text=""
                    android:textColor="@color/textColorMedium"
                    android:textSize="40px" />
            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="11px"
                android:layout_marginLeft="40px"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="剩余机会 :"
                    android:textColor="@color/textColorMedium"
                    android:textSize="40px" />

                <TextView
                    android:id="@+id/kaoshi_yicanjia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text=""
                    android:textColor="@color/textColorMedium"
                    android:textSize="40px" />
            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="11px"
                android:layout_marginLeft="40px"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="及格分数 :"
                    android:textColor="@color/textColorMedium"
                    android:textSize="40px" />

                <TextView
                    android:id="@+id/kaoshi_xuefen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text=""
                    android:textColor="@color/textColorMedium"
                    android:textSize="40px" />

            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="67px"
                android:layout_marginLeft="40px"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="参与人次数 :"
                    android:textColor="@color/textColorMedium"
                    android:textSize="40px" />

                <TextView
                    android:id="@+id/kaoshi_renshu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text=""
                    android:textColor="@color/textColorMedium"
                    android:textSize="40px" />

            </com.zhy.autolayout.AutoLinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="34px"
                android:background="@color/backgroundColor" />

            <TextView
                android:id="@+id/kaoshi_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40px"
                android:layout_marginLeft="40px"
                android:layout_marginRight="40px"
                android:layout_marginTop="67px"
                android:text=""
                android:textColor="@color/black"
                android:textSize="40px" />

            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/kaoshi_total_ll"
                android:layout_width="match_parent"
                android:layout_height="270px"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="提示 : 共有 "
                    android:textColor="@color/textColorDark"
                    android:textSize="40px" />

                <TextView
                    android:id="@+id/kaoshi_total_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="8"
                    android:textColor="@color/red"
                    android:textSize="40px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text=" 关，上次闯过第 "
                    android:textColor="@color/textColorDark"
                    android:textSize="40px" />

                <TextView
                    android:id="@+id/kaoshi_now_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="1"
                    android:textColor="@color/red"
                    android:textSize="40px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text=" 关"
                    android:textColor="@color/textColorDark"
                    android:textSize="40px" />

            </com.zhy.autolayout.AutoLinearLayout>

            <Button
                android:id="@+id/kaoshi_go"
                android:layout_width="match_parent"
                android:layout_height="135px"
                android:layout_gravity="center"
                android:layout_margin="27px"
                android:background="@color/green1"
                android:gravity="center"
                android:text="进入考试"
                android:textColor="@color/white"
                android:textSize="47px" />

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="135px"
                android:layout_marginTop="51px"
                android:background="@color/white"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/kaoshi_cj"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:src="@mipmap/my_grades" />

                <View
                    android:layout_width="3px"
                    android:layout_height="101px"
                    android:layout_gravity="center_vertical"
                    android:background="@color/backgroundColor" />

                <ImageView
                    android:id="@+id/kaoshi_cjph"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:src="@mipmap/scores_ranking" />

            </com.zhy.autolayout.AutoLinearLayout>

        </com.zhy.autolayout.AutoLinearLayout>

    </com.jess.arms.widget.autolayout.AutoScrollView>

</com.zhy.autolayout.AutoLinearLayout>