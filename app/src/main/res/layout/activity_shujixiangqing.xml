<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <include layout="@layout/activity_tltle" />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="51px"
        android:background="#FFFFFF"
        android:orientation="horizontal">

        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/rl_shujixiangqing_Image"
            android:layout_width="338px"
            android:layout_height="439px"
            android:layout_marginLeft="101px"
            android:layout_marginRight="51px"
            android:layout_marginTop="40px"
            android:scaleType="centerCrop">

            <ImageView
                android:id="@+id/iv_shujixiangqing_Image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/tv_shujixiangqing_jurisdic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/shuwu_gongkai"/>

        </com.zhy.autolayout.AutoRelativeLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginTop="20dip"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_shujixiangqing_shuname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="13px"
                android:text="斗破苍穹"
                android:textColor="@color/textColorDark"
                android:textSize="51px"
                android:textStyle="bold" />

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7px">

                <TextView
                    android:id="@+id/tv_zuozhe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="作者:"
                    android:textColor="@color/black" />


            </com.zhy.autolayout.AutoRelativeLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7px"
                android:layout_marginTop="10dip"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <!--<RatingBar-->
                <!--android:id="@+id/foodRatingBar"-->
                <!--style="@style/foodRatingBar"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:isIndicator="false"-->
                <!--android:numStars="5"-->
                <!--android:stepSize="0.5"-->
                <!--android:visibility="gone" />-->

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/book_level_star1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/star"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/book_level_star2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/star"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/book_level_star3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/star"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/book_level_star4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/star"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/book_level_star5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="34px"
                        android:src="@mipmap/star"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_yuedu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="阅读 "
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/shujixiangqing_readcishu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/black" />

                </com.zhy.autolayout.AutoLinearLayout>

            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7px"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_shangchuan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="出版社： "
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tv_shujixiangqing_shangchuan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/tv_shangchuan"
                    android:text=""
                    android:textColor="@color/black" />

            </com.zhy.autolayout.AutoRelativeLayout>

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="13px">

                <TextView
                    android:id="@+id/tv_daxiao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="大小： "
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tv_numble"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/tv_daxiao"
                    android:text=""
                    android:textColor="@color/black" />

            </com.zhy.autolayout.AutoRelativeLayout>

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="13px">

                <TextView
                    android:id="@+id/tv_leixing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="类型： "
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tv_filetype"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/tv_leixing"
                    android:text=""
                    android:textColor="@color/black" />

            </com.zhy.autolayout.AutoRelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="13px">

                <TextView
                    android:id="@+id/tv_jindu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="进度： "
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tv_progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/tv_jindu"
                    android:text=""
                    android:textColor="@color/black" />

            </RelativeLayout>

        </com.zhy.autolayout.AutoLinearLayout>

    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_read"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginBottom="13dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:background="@mipmap/shuwuxq_yuedu"
            android:text="立即阅读"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <ProgressBar
            android:id="@+id/pb_shujixiangqing"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="27px"
            android:layout_weight="1"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_ppp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="13dp"
            android:layout_marginRight="10dp"
            android:text="0%"
            android:visibility="gone" />

        <Button
            android:id="@+id/bt_shoucan"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="13dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:background="@mipmap/shuwuxq_jiaru"
            android:text="加入书架"
            android:textColor="@color/textColorMedium"
            android:textSize="14sp" />

        <Button
            android:id="@+id/bt_yishoucang"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="13dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:background="@mipmap/shuwuxq_jiaru"
            android:text="已加入书架"
            android:textColor="@color/textColorMedium"
            android:textSize="14sp"
            android:visibility="gone" />
    </com.zhy.autolayout.AutoLinearLayout>

    <!--<com.ab.view.sliding.AbSlidingTabView-->
    <!--android:id="@+id/mAbSlidingTabView"-->
    <!--android:layout_width="fill_parent"-->
    <!--android:layout_height="wrap_content" />-->
    <!--   </LinearLayout>
    </ScrollView>  -->

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="51px"
        android:background="@color/backgroundColorShallow" />

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.TabLayout
            android:id="@+id/tablayout_menu"
            android:layout_width="match_parent"
            android:layout_height="101px"
            android:background="#FFFFFF"
            app:tabIndicatorColor="@color/allStyles"
            app:tabIndicatorHeight="7px"
            app:tabSelectedTextColor="@color/textColorDark"
            app:tabTextColor="@color/textColorDark" />

        <android.support.v4.view.ViewPager
            android:id="@+id/tablayout_viewpagaer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tablayout_menu"
            android:background="#FFFFFF" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tablayout_menu"
            android:background="@mipmap/comui_bar_bottom_shadow" />

    </com.zhy.autolayout.AutoRelativeLayout>

</com.zhy.autolayout.AutoLinearLayout>