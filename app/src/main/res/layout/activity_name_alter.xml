<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_name_alter"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.qingyii.hxt.NameAlterActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/x45"
        android:background="@color/tltleColor"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/returns_arrow" />

        <TextView
            android:id="@+id/tv_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x20"
            android:gravity="center_vertical"
            android:text="更改名字"
            android:textColor="@color/white"
            android:textSize="20sp" />

    </LinearLayout>

    <EditText
        android:id="@+id/name_alter_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x30"
        android:layout_marginLeft="@dimen/x18"
        android:layout_marginRight="@dimen/x18"
        android:layout_marginBottom="@dimen/x3"
        android:background="#FFFFFF"
        android:hint="请输入名称"
        android:maxLength="10"
        android:textColor="@color/textColorDark"
        android:textColorHint="@color/textColorShallow"
        android:textSize="@dimen/x16" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x2"
        android:background="@color/backgroundColor"
        android:layout_marginRight="@dimen/x15"
        android:layout_marginLeft="@dimen/x15"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x12"
        android:layout_marginLeft="@dimen/x18"
        android:text="好名字可以让你的朋友更容易记住你"
        android:textColor="@color/textColorShallow"/>

    <TextView
        android:id="@+id/name_alter_affirm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40"
        android:layout_margin="@dimen/x20"
        android:background="@color/allStyles"
        android:text="确认"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/x20"/>

</LinearLayout>
