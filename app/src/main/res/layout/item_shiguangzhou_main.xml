<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    android:descendantFocusability="blocksDescendants">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/x10"
        android:paddingLeft="@dimen/x10"
        android:paddingRight="@dimen/x10"
        android:paddingTop="@dimen/x15">

        <TextView
            android:id="@+id/circle_main_time"
            android:layout_width="@dimen/x60"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x3"
            android:gravity="right"
            android:text="00月00日"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x5"
            android:layout_marginRight="@dimen/x5"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/circle_main_photo"
                android:layout_width="@dimen/x60"
                android:layout_height="@dimen/x60" />

            <TextView
                android:id="@+id/circle_main_photo_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x10"
                android:text="共0张"
                android:textSize="@dimen/x8"
                android:visibility="invisible" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x5"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/circle_main_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="类型："
                    android:textColor="@color/blue_light"
                    android:textSize="@dimen/x12" />

                <TextView
                    android:id="@+id/circle_main_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/x6"
                    android:text="删除"
                    android:textColor="#DDFF0000"
                    android:textSize="@dimen/x12"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/circle_main_report"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/x6"
                    android:text="举报"
                    android:textColor="#9B9B9B"
                    android:textSize="@dimen/x12" />

            </RelativeLayout>

            <TextView
                android:id="@+id/circle_main_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/x5"
                android:layout_marginTop="@dimen/x5"
                android:ellipsize="end"
                android:maxLines="3"
                android:minLines="3"
                android:text="      内容"
                android:textSize="@dimen/x12" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right">

                <TextView
                    android:id="@+id/circle_main_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/x10"
                    android:drawableLeft="@drawable/circle_love_selector_style"
                    android:drawablePadding="@dimen/x5"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="#9B9B9B"
                    android:textSize="@dimen/x14" />

                <TextView
                    android:id="@+id/circle_main_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/ic_circle_comment"
                    android:drawablePadding="@dimen/x5"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="#9B9B9B"
                    android:textSize="@dimen/x14" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
