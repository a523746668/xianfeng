<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/my_tong_xun_lu_child"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x40"
            android:layout_marginLeft="@dimen/x15"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.qingyii.hxt.view.RoundedImageView
                android:id="@+id/child_icon"
                android:layout_width="@dimen/x30"
                android:layout_height="@dimen/x30"
                android:background="@mipmap/circle_header"
                android:contentDescription="@null"
                android:scaleType="center"
                app:corner_radius="100dp" />

            <TextView
                android:id="@+id/child_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x15"
                android:text="姓名"
                android:textColor="@color/textColorMedium"
                android:textSize="@dimen/x14" />

        </LinearLayout>

        <TextView
            android:id="@+id/child_department"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x15"
            android:layout_marginRight="@dimen/x15"
            android:text="职务"
            android:textColor="@color/textColorMedium"
            android:textSize="@dimen/x14" />

    </RelativeLayout>

</LinearLayout>
