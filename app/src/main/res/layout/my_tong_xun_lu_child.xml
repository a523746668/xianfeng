<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/my_tong_xun_lu_child"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="wrap_content"
            android:layout_height="135px"
            android:layout_marginLeft="@dimen/x15"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.qingyii.hxtz.view.RoundedImageView
                android:id="@+id/child_icon"
                android:layout_width="101px"
                android:layout_height="101px"
                android:background="@mipmap/circle_header"
                android:contentDescription="@null"
                android:scaleType="center"
                app:corner_radius="100dp" />

            <TextView
                android:id="@+id/child_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x15"
                android:text="姓名"
                android:textColor="@color/textColorMedium"
                android:textSize="52px" />

        </com.zhy.autolayout.AutoLinearLayout>

        <TextView
            android:id="@+id/child_department"
            android:layout_width="300px"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x15"
            android:layout_marginRight="@dimen/x15"
            android:gravity="right"
            android:text="职务"
            android:singleLine="true"
            android:textColor="@color/textColorMedium"
            android:textSize="52px" />

    </com.zhy.autolayout.AutoRelativeLayout>

</com.zhy.autolayout.AutoLinearLayout>
