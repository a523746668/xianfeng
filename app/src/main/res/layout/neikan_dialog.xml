<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/x18">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x5"
            android:background="@mipmap/shujia_tishi" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x10"
            android:text="提示"
            android:textColor="@color/textColorDark"
            android:textSize="@dimen/x15" />

    </LinearLayout>

    <TextView
        android:id="@+id/neikan_dialog_context"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginTop="@dimen/x12"
        android:textColor="@color/textColorDark"
        android:textSize="@dimen/x15"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x18"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/neikan_dialog_l"
            android:layout_width="@dimen/x120"
            android:layout_height="wrap_content"
            android:background="@mipmap/shuwuxq_jiaru"
            android:gravity="center"
            android:textColor="@color/textColorMedium"
            android:textSize="@dimen/x15" />

        <TextView
            android:id="@+id/neikan_dialog_r"
            android:layout_width="@dimen/x120"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x15"
            android:background="@mipmap/shuwuxq_yuedu"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/x15" />

    </LinearLayout>

</LinearLayout>
