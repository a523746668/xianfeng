<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/x15">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x5"
                android:background="@mipmap/shujia_tishi" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x10"
                android:text="提示"
                android:textColor="@color/textColorDark"
                android:textSize="@dimen/x15" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x6"
            android:layout_marginTop="@dimen/x12"
            android:text="确定要 签收 吗？"
            android:textColor="@color/textColorDark"
            android:textSize="@dimen/x15" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x18"
            android:orientation="horizontal">

            <Button
                android:id="@+id/inform_bottom_sheet_qx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@mipmap/guan_cancel"
                android:text="取消"
                android:textColor="@color/textColorShallow"
                android:textSize="@dimen/x15" />

            <View
                android:layout_width="@dimen/x20"
                android:layout_height="0dp" />

            <Button
                android:id="@+id/inform_bottom_sheet_qd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@mipmap/guan_submit"
                android:text="确定"
                android:textColor="@color/white"
                android:textSize="@dimen/x15" />

        </LinearLayout>

</LinearLayout>
