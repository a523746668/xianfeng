<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="70dp"
        android:layout_height="110dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/iv_fenleiZti_Image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="13dp"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/tv_fenleiZti_isgk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_fenleiZti_Image"
            android:layout_alignParentRight="true"
            android:background="@color/green"
            android:text="" />

        <ImageView
            android:id="@+id/tv_fenleiZti_jurisdic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/shuwu_gongkai"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_fenleiZti_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="书架"
            android:textColor="@color/black"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/tv_zuozhe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="作者:"
            android:textColor="@color/one_black"
            android:textSize="12sp" />


        <TextView
            android:id="@+id/tv_fenleiZti_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_marginTop="3dp"
            android:ellipsize="end"
            android:maxLines="3"
            android:text=""
            android:textColor="@color/one_black"
            android:textSize="12sp" />

        <!--      <TextView
                android:id="@+id/tv_fenleiZti_read"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:textColor="@color/one_black"
                android:textSize="12sp"
                android:text="" />  -->
    </LinearLayout>

</LinearLayout>
